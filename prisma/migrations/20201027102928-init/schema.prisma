datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  author      Author   @relation(fields: [authorId], references: [id])
  description String
  rating      Int
  published   Boolean
  authorId    Int
}

model Author {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  bio       String
  books     Book[]
}
